          "quantity": { "type": "number", "example": 1000 },
          "rate": { "type": "number", "example": 85.5 },
          "entryDate": { "type": "string", "format": "date-time", "example": "2024-05-15T10:30:00Z" }
        }
      },
      "EntryExitRequest": {
        "type": "object",
        "required": ["exitWeight"],
        "properties": {
          "exitWeight": { "type": "number", "example": 8300 }
        }
      },
      "EntryResponse": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "507f1f77bcf86cd799439015" },
          "entryType": { "type": "string", "example": "purchase" },
          "vendor": { "type": "string", "example": "507f1f77bcf86cd799439013" },
          "vehicle": { "type": "string", "example": "507f1f77bcf86cd799439012" },
          "plant": { "type": "string", "example": "507f1f77bcf86cd799439011" },
          "entryWeight": { "type": "number", "example": 15000 },
          "exitWeight": { "type": "number", "example": 8300 },
          "expectedWeight": { "type": "number", "example": 6800 },
          "exactWeight": { "type": "number", "example": 6700 },
          "varianceFlag": { "type": "boolean", "example": false },
          "quantity": { "type": "number", "example": 6700 },
          "rate": { "type": "number", "example": 85.5 },
          "totalAmount": { "type": "number", "example": 572 },
          "entryDate": { "type": "string", "format": "date-time", "example": "2024-05-15T10:30:00.000Z" },
          "createdBy": { "type": "string", "example": "507f1f77bcf86cd799439014" },
          "isActive": { "type": "boolean", "example": true },
          "createdAt": { "type": "string", "format": "date-time", "example": "2024-05-15T10:30:00.000Z" },
          "updatedAt": { "type": "string", "format": "date-time", "example": "2024-05-15T10:45:00.000Z" }
        }
