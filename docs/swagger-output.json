        "summary": "Create a vehicle",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["vehicleNumber", "vehicleType", "capacity", "driverName", "driverPhone"],
                "properties": {
                  "vehicleNumber": { "type": "string", "example": "MH12AB1234" },
                  "vehicleType": { "type": "string", "enum": ["buy", "sell"], "example": "buy" },
                  "capacity": { "type": "number", "example": 10000 },
                  "driverName": { "type": "string", "example": "John Doe" },
                  "driverPhone": { "type": "string", "example": "9876543210" }
