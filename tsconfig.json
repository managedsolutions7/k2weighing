{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, // for importing generated swagger docs
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": ["src", "src/swagger.ts"]
}
