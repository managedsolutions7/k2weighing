{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
      "@swagger/*": ["swagger/*"],
      "@validations/*": ["validations/*"],
      "@constants/*": ["constants/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/__tests__"]
}
